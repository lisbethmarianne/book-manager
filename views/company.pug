extends layout

block content
  h1 #{company.name}
  p from #{company.city}, #{company.country}
  h2 Available Books
  each book in books
    li 
      a(href='/books/' + book.id) #{book.author}: #{book.title}

  br
  form(method='POST' action=`/companies/${company.id}/books`)
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='' name='title')
    div.form-group
      label(for='author') Author:
      input#author.form-control(type='text', placeholder='' name='author')
    button.btn.btn-primary(type='submit') Add Book

  br
  each employee in employees
    li #{employee.name}
  br
  form(method='POST' action=`/companies/${company.id}/employees`)
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='' name='name')
    button.btn.btn-primary(type='submit') Add Employee
